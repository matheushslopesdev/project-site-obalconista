        <div class="container-data">
            <label>Selecione a Receita</label>
            <select name="tipoReceita" id="tipo-receita">
                <option value="popular">Popular</option>
                <option value="antimicrobiano">Antimicrobiana</option>
                <option value="receitacomum">Receituario Comum</option>
